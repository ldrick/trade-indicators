		"globals": "^15.9.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"markdownlint-cli": "^0.42.0",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.7.0",
		"vitest": "^2.1.1"
	},
	"sideEffects": false,
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write ."
		]
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"printWidth": 100,
		"trailingComma": "all",
		"arrowParens": "always",
		"endOfLine": "lf"
	}
