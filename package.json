{
  "name": "@ldrick/trade-indicators",
  "version": "0.2.0",
  "description": "Trade Indicators",
  "license": "MIT",
  "repository": "ldrick/trade-indicators",
  "author": {
    "name": "Ricky Lippmann",
    "email": "ricky.lippmann@gmail.com"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">= 14.0",
    "yarn": ">= 1.22"
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "format": "prettier --write .",
    "lint": "eslint .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "test": "jest"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "average",
    "dema",
    "ema",
    "indicators",
    "moving",
    "signals",
    "sma",
    "smma",
    "technical",
    "trade",
    "trading",
    "true-range"
  ],
  "dependencies": {
    "big.js": "^6.1.1",
    "fp-ts": "^2.11.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/big.js": "^6.1.1",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-jest": "^27.0.6",
    "core-js": "^3.15.2",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-diff": "^27.0.6",
    "jest-matcher-utils": "^27.0.6",
    "lint-staged": "^11.1.1",
    "pinst": "^2.1.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "corejs": "3.15",
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/node_modules/",
      "/.yarn",
      "/.pnp.*",
      "/dist",
      "/coverage"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:eslint-comments/recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "*.ts?(x)"
        ],
        "extends": [
          "airbnb-typescript/base",
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking",
          "plugin:eslint-comments/recommended",
          "prettier"
        ],
        "parserOptions": {
          "project": "./tsconfig.json",
          "warnOnUnsupportedTypeScriptVersion": false
        },
        "rules": {
          "import/prefer-default-export": "off",
          "import/no-default-export": "error"
        }
      },
      {
        "files": [
          "src/!(errors)/*.ts?(x)"
        ],
        "plugins": [
          "functional"
        ],
        "extends": [
          "plugin:functional/external-recommended",
          "plugin:functional/recommended",
          "plugin:functional/stylitic"
        ],
        "rules": {
          "functional/functional-parameters": [
            "warn",
            {
              "enforceParameterCount": false
            }
          ],
          "functional/no-conditional-statement": [
            "warn",
            {
              "allowReturningBranches": true
            }
          ]
        }
      },
      {
        "files": [
          "*.spec*.ts?(x)"
        ],
        "extends": [
          "plugin:jest/recommended"
        ]
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/config/jest.setup.ts"
    ],
    "collectCoverage": true
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write ."
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
