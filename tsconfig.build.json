{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"declaration": true,
		"pretty": true,
		"newLine": "lf",
		"stripInternal": true,
		"strict": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"types": ["jest"]
	},
	"include": ["src"]
}
