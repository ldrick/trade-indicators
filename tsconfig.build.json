{
	"extends": [
		"@tsconfig/recommended/tsconfig.json",
		"@tsconfig/node-lts/tsconfig.json",
		"@tsconfig/node-ts/tsconfig.json"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist",
		"declaration": true,
		"pretty": true,
		"newLine": "lf",
		"stripInternal": true,
		"noEmitOnError": true
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src"]
}
